<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:singleLine="true"
        android:textSize="22sp"
        android:textStyle="bold"
        tool:text="Business Name" />

    <TextView
        android:id="@+id/address_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:singleLine="true"
        android:textSize="18sp"
        android:tooltipText="business name"
        tool:text="Address Area" />



    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_area"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:singleLine="true"
        tool:text="client name"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/client_name"
        android:background="#d3d3d3" />

</RelativeLayout>
